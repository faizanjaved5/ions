# ============================================
# FORCE REST API REQUESTS TO WORDPRESS
# ============================================
# This ensures /wp-json/ calls always hit WordPress index.php
# before any other routing, caching, or channel rules.
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/wp-json/ [NC]
RewriteRule ^ index.php [L]


