# ============================================
# PHP RUNTIME LIMITS (requires mod_php or LiteSpeed allowing php_value)
# If you get a 500 error, move these to a .user.ini file instead.
php_value upload_max_filesize 100M
php_value post_max_size 100M
php_value max_execution_time 300
php_value memory_limit 512M
php_value max_input_time 300
# ============================================

# ============================================
# FORCE REST API REQUESTS TO WORDPRESS
# ============================================
# This ensures /wp-json/ calls always hit WordPress index.php
# before any other routing, caching, or channel rules.
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/wp-json/ [NC]
RewriteRule ^ index.php [L]

# ================= VIRTUAL HOST EMULATION (mapped domains only) =================
# Let actual files/dirs through (but NOT the site root)
RewriteCond %{REQUEST_URI} !^/?$                         # <- do not short-circuit on "/"
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Avoid looping on admin/cron/login/REST/router itself
RewriteCond %{REQUEST_URI} ^/(iondynamic\.php|wp-admin/|wp-login\.php|wp-cron\.php|wp-json/) [NC]
RewriteRule ^ - [L]

# For NON-primary hosts only, internally route everything to iondynamic.php
# (Primary hosts will simply continue to the normal WordPress rules below.)
# ðŸ‘‰ Add any other primary hostnames to the group below.
RewriteCond %{HTTP_HOST} !^(www\.)?(ions\.com|iblog\.bz)$ [NC]
RewriteRule ^(.*)$ /iondynamic.php [L,QSA,E=VHOST:%{HTTP_HOST},E=ORIG_URI:%{REQUEST_URI}]
