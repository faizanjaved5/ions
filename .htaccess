# ============================================
# BEGIN IONLocalNetwork Channel Routing
# ============================================
RewriteEngine On

# Skip if the request is for an existing file or directory
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Skip known WP and static routes including favicon.ico
RewriteCond %{REQUEST_URI} ^/(favicon\.ico|wp-|wp-json|wp-admin|wp-content|wp-includes|wp-login\.php|robots\.txt|sitemap[^/]*\..+|about|contact|blog) [NC]
RewriteRule ^ - [L]

# Allow disabling with file or env var
RewriteCond %{ENV:ION_VIRTUAL_DISABLED} =1 [OR]
RewriteCond %{DOCUMENT_ROOT}/iondynamic.txt -f
RewriteRule ^([a-z0-9\-]+)/?(.*)?$ - [S=1]

# Route ion-content pages directly to WordPress
RewriteRule ^ion-content/.*$ index.php [L]

# NEW RULE: Route exact /ion path to iondynamic.php
RewriteRule ^ion/?$ /iondynamic.php?slug=ion [QSA,L,NC]

# Route dynamic channel pages to handler (only if NOT ion-content)
RewriteRule ^ion-([a-z0-9\-+]+)/?(.*)?$ /iondynamic.php?slug=ion-$1&subpath=$2 [QSA,L,NC]
# ============================================
# END IONLocalNetwork Channel Routing
# ============================================


# BEGIN ION Shortlink Routing
# Handle /v/ shortlinks - route to shortlink resolver
RewriteRule ^v/([a-zA-Z0-9]+)(?:-.*)?/?$ /v/index.php?link=$1 [QSA,L]

# Skip /v/ directory from other processing if file/dir exists
RewriteCond %{REQUEST_URI} ^/v/
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
# END ION Shortlink Routing


### ION: @username profile routes  -------------------------------------------
# Matches /@alex  -> routes through central router so we can log/track
RewriteCond %{REQUEST_URI} ^/@[A-Za-z0-9._-]+/?$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^@([A-Za-z0-9._-]+)/?$ iondynamic.php?route=profile&handle=$1 [QSA,L]
### --------------------------------------------------------------------------


# ============================================
# BEGIN WordPress Core
# ============================================
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteBase /

# Let WordPress handle ion-content URLs
RewriteRule ^ion-content/.*$ index.php [L]

# Standard WP index.php handler
RewriteRule ^index\.php$ - [L]

# Static file checks
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Pass known WordPress files directly
RewriteRule ^([_0-9a-zA-Z-]+/)?(wp-(content|admin|includes).*) $2 [L]
RewriteRule ^([_0-9a-zA-Z-]+/)?(.*\.php)$ $2 [L]

# Default: route everything else to WordPress
RewriteRule . index.php [L]
# ============================================
# END WordPress Core
# ============================================


# ============================================
# BEGIN Cookie & CORS Fix for REST API Auth
# ============================================
<IfModule mod_headers.c>
	# Ensure cookies are sent with cross-site requests (needed for Elementor editor)
	Header always edit Set-Cookie (.*) "$1; SameSite=None; Secure"
</IfModule>
